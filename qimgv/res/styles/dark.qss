/*----------------------------------------------------------------------------*/
/* Widgets */
/*----------------------------------------------------------------------------*/

[accessibleName="Button"] {
    font: bold;
    color: #86888a;
    background-color: #29292a;
    border: 1px solid #1a1a1b;
    border-radius: 2px;
    padding: 6px 9px 6px 9px;
}

[accessibleName="Button"]:hover {
    background-color: #313132;
    border-color: #1a1a1b;
    color: #8e9092;
}

[accessibleName="Button"]:pressed {
    background-color: #222223;
    border-color: #19191a;
    color: #666669;
}

/*----------------------------------------------------------------------------*/
[accessibleName="CheckableButton"] {
    font: bold;
    color: #666669;
    border-radius: 2px;
    padding: 6px 9px 6px 9px;
    margin: 2px;
}

[accessibleName="CheckableButton"]:hover {
    background-color: #29292a;
    border: 1px solid #1a1a1b;
    color: #666669;
}

[accessibleName="CheckableButton"]:pressed {
    background-color: #313132;
    border: 1px solid #1a1a1b;
    color: #8e9092;
}

[accessibleName="CheckableButton"]:checked {
    background-color: #313132;
    border: 1px solid #1a1a1b;
    color: #8e9092;
}

/*----------------------------------------------------------------------------*/
[accessibleName="PanelButton"] {
    padding: 7px 7px 7px 7px;
    border-radius: 2px;
    margin: 2px;
}

[accessibleName="PanelButton"]:hover {
    background-color: #313132;
    border: 1px solid #1a1a1b;
    color: #8e9092;
}

[accessibleName="PanelButton"]:pressed {
    background-color: #29292a;
    border: 1px solid #1a1a1b;
    color: #666669;
}

